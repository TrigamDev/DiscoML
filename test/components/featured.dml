<container>
	/*
		This section gives some cool
		info about the bot!
	*/
	<section>
		<header level = 1>@( bot.name )</header>
		<text>Wow! This is a cool bot!</text>

		<accessory>
			@if ( bot.getAvatar() ) {
				<media url="@( bot.getAvatar() )">
					A cool bot
				</media>
			} @else {
				<media url="@( new CDN().defaultAvatar( 0 ) )">
					Maybe a not so cool bot
				</media>
			}
		</accessory>
	</section>

	<separator spacing="small" divider=true />

	// Display a list of fields, each bolded
	<list type="unordered">
		@foreach ( field in displayFields ) {
			<item id=null>
				<bold>@( field.label )</bold>: @( field.value )
			</item>
		}
	</list>

	<!-- XML-style comments are also cool -->

	<!--
		And multiline XML-style
		comments, too
	-->
</container>
